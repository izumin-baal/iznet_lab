#!/usr/bin/env bash
set -euo pipefail

usage() {
  cat <<'USAGE' >&2
usage:
  clab-bridge-create [bridge-name]
USAGE
}

extract_bridges() {
  local clab_file="$1"
  awk '
    BEGIN { in_nodes=0; current="" }
    /^  nodes:/ { in_nodes=1; next }
    /^  links:/ { in_nodes=0; next }
    in_nodes && $0 ~ /^[ ]{4}[^[:space:]]+:/ {
      current=$0
      sub(/^[ ]{4}/, "", current)
      sub(/:.*/, "", current)
      next
    }
    in_nodes && $0 ~ /^[ ]{6}kind:[ ]*bridge/ {
      if (current != "") { print current }
    }
  ' "${clab_file}"
}

create_bridge() {
  local name="$1"
  if ip link show "${name}" >/dev/null 2>&1; then
    echo "${name} already exists"
    return 0
  fi
  sudo ip link add "${name}" type bridge
  sudo ip link set "${name}" up
  echo "created ${name}"
}

pick_clab_file() {
  local matches
  matches=( *.clab.yml )
  if [[ ${#matches[@]} -eq 1 && -f "${matches[0]}" ]]; then
    echo "${matches[0]}"
    return 0
  fi
  if [[ ${#matches[@]} -eq 0 || ( ${#matches[@]} -eq 1 && "${matches[0]}" == "*.clab.yml" ) ]]; then
    echo "no *.clab.yml found in current directory" >&2
    return 2
  fi
  echo "multiple *.clab.yml found; run in the target lab directory" >&2
  return 2
}

if [[ $# -eq 0 ]]; then
  CLAB_FILE="$(pick_clab_file)"
  mapfile -t bridges < <(extract_bridges "${CLAB_FILE}")
  if [[ ${#bridges[@]} -eq 0 ]]; then
    echo "no bridge nodes found in ${CLAB_FILE}"
    exit 0
  fi
  for br in "${bridges[@]}"; do
    create_bridge "${br}"
  done
  exit 0
fi

if [[ $# -ne 1 ]]; then
  usage
  exit 2
fi

create_bridge "$1"
